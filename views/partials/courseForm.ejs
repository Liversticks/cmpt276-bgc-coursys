<h2 class="mt-5">Create New Course</h2>
<div class="form-row mt-3">
  <div class="col-6 mb-3">
    <label for="coursename">Course Name</label>
    <input type="text" class="form-control" id="coursename" name="coursename" required="true">
  </div>
  <div class="col-5 mb-3">
    <label for="topic">Topic</label>
    <input type="text" class="form-control" id="topic" name="topic" required="true">
  </div>
</div>
<div class="form-row">
  <div class="col-2 mb-3">
    <label for="">Capacity</label>
    <input type="number" class="form-control" id="capacity" name="capacity" min="0" required="true">
  </div>
  <div class="col-9 mb-3">
    <label for="location">Location</label>
    <input type="text" class="form-control" id="location" name="location">
  </div>
</div>
<div class="form-row">
  <div class="col-4 mb-3">
    <label for="Start Date">Start Date</label>
    <input type="date" class="form-control" id="startdate" name="startdate" required="true">
  </div>
  <div class="col-3 mb-3">
    <label for="">Start Time</label>
    <input type="time" class="form-control" id="starttime" name="starttime" required="true">
  </div>
</div>
<div class="form-row">
  <div class="col-4 mb-3">
    <label for="">End Date</label>
    <input type="date" class="form-control" id="enddate" name="enddate" required="true">
  </div>
  <div class="col-3 mb-3">
    <label for="">End Time</label>
    <input type="time" class="form-control" id="endtime" name="endtime" required="true">
  </div>
</div>
<div class="form-row">
  <div class="col-10 mb-4">
    <label for="">Description</label>
    <textarea class="form-control" id="description" name="description" rows="5"></textarea>
  </div>
</div>
<input type="submit" class="btn btn-dark" value="Create New Course">
