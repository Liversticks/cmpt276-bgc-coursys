  <div class="col-6 mb-3">
    <label for="coursename">Course Name</label>
    <input type="text" class="form-control" id="coursename" name="coursename" required="true">
  </div>
  <div class="col-5 mb-3">
    <label for="topic">Topic</label>
    <input type="text" class="form-control" id="topic" name="topic" required="true">
  </div>
</div>
<div class="form-row">
  <div class="col-2 mb-3">
    <label for="">Capacity</label>
    <input type="number" class="form-control" id="capacity" name="capacity" min="0" required="true">
  </div>
  <div class="col-9 mb-3">
    <label for="location">Location</label>
    <input type="text" class="form-control" id="location" name="location">
  </div>
</div>
