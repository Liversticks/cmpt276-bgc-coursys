<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/header.ejs') %>
</head>

<body>

  <%- include('../partials/orgNav.ejs') %>

  <div class="container">
    <div class="row pt-5 pb-2 justify-content-between">
      <div class="col-6">
        <h2>Manage Courses
          <a class="btn p-0" href="/newcourse"><i class="material-icons md-36">add_circle</i></a>
        </h2>
      </div>
      <div class="col-5">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search Courses" aria-label="Search Courses"
            aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-sm btn-outline-dark justify-content-center" type="button">
              <i class="material-icons md-24">search</i>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <table id="tb" class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Course Name</th>
            <th scope="col">Topic</th>
            <th scope="col">Location</th>
            <th scope="col">Date/Time</th>
            <th scope="col">Seats</th>
            <th scope="col">Details</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((item, index) => { %>
          <tr>
            <th scope="row"><%=index+1 %></th>
            <td><%= item.title %></td>
            <td><%= item.topic %></td>
            <td><%= item.delivery %></td>
            <td><%= item.time %></td>
            <!-- <td><%= item.seats %>/<%= item.maxSeats %></td> current seats not available yet-->
            <td><%= item.maxSeats %></td>
            <td><%= item.status %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <script>
    window.onload = () => {
      $('#tb').SetEditable({
        // TODO: Add event handlers
      });
      console.log("hi");
    }
  </script>
</body>

</html>